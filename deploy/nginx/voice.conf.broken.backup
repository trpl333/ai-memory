# Redirect HTTP -> HTTPS
server {
    listen 80;
    server_name voice.theinsurancedoctors.com;

    location /.well-known/acme-challenge/ { root /var/www/html; }
    location / { return 301 https://$host$request_uri; }
}

# HTTPS + WebSocket proxy
server {
    listen 443 ssl;
    server_name voice.theinsurancedoctors.com;

    ssl_certificate     /etc/letsencrypt/live/voice.theinsurancedoctors.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/voice.theinsurancedoctors.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # --- Proxy Twilio voice webhooks to Flask orchestrator
    location /phone/ {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # --- TwiML file (Media Streams)
    location = /twiml.xml {
        default_type text/xml;
        return 200 '<?xml version="1.0" encoding="UTF-8"?>
<Response>
  <Say voice="Polly.Joanna">Hello! Media stream is active.</Say>
  <Start>
    <Stream url="wss://voice.theinsurancedoctors.com/twilio" track="inbound_track"/>
  </Start>
  <Pause length="3600"/>
</Response>';
    }

    # --- Proxy Readdy chat
    location /readdy-chat {
        proxy_pass http://127.0.0.1:9102/readdy-chat;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    location /readdy-health {
        proxy_pass http://127.0.0.1:9102/readdy-health;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    location /readdy-echo {
        proxy_pass http://127.0.0.1:9102/readdy-echo;
        proxy_set_header Host $host;
        proxy_buffering off;
        proxy_read_timeout 120s;
        proxy_send_timeout 120s;
        proxy_connect_timeout 10s;
    }

    # --- WebSocket to VoiceBridge
    location /twilio {
        proxy_pass http://127.0.0.1:9100/twilio;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;

        proxy_read_timeout 3600;
        proxy_send_timeout 3600;
        proxy_buffering off;
        proxy_request_buffering off;
    }

    # --- Healthcheck to VoiceBridge
    location = /healthz {
        proxy_pass http://127.0.0.1:9100/healthz;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }

    # --- Call-summary webhooks to Flask
    location = /call-summary {
        proxy_pass         http://127.0.0.1:3000/call-summary;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

