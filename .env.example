# DigitalOcean Deployment Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
PGHOST=your-db-hostname.db.ondigitalocean.com
PGPORT=25060
PGDATABASE=your_database_name
PGUSER=your_database_user
PGPASSWORD=your_database_password

# Twilio Configuration (Phone System)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+19497071290

# ElevenLabs Configuration (Voice Synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=FGY2WhTYpPnrIDTdsKH5  # Laura's voice

# OpenAI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini


# Flask Configuration
SESSION_SECRET=your-secret-session-key-here
FLASK_ENV=production

# Optional: Replit OAuth (if needed)
REPL_ID=optional_repl_id
ISSUER_URL=https://replit.com/oidc
